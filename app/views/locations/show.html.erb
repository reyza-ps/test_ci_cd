<!-- Heading Section -->
<div class="md:flex md:items-center md:justify-between mb-5">
  <div class="min-w-0 flex-1">
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-xl sm:tracking-tight">Location Detail</h2>
  </div>
  <div class="mt-4 flex md:mt-0 md:ml-4">
  </div>
</div>
<!-- End Heading Section -->

<div class='px-6' data-controller="tabs">
  <div class="sm:hidden">
    <label for="tabs" class="sr-only">Select a tab</label>
    <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
    <select id="tabs" name="tabs" class="block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500">
      <option selected>Location</option>
      <option>Evses & Connectors</option>
      <option>Logs</option>
    </select>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex" aria-label="Tabs">
        <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" -->
        <a href="#" data-tabs-target="tab"  data-action="click->tabs#changeTab" class="tab-active">Location</a>
        <a href="#" data-tabs-target="tab"  data-action="click->tabs#changeTab" class="tab-inactive">Evses & Connectors</a>
        <a href="#" data-tabs-target="tab"  data-action="click->tabs#changeTab" class="tab-inactive">Logs</a>
      </nav>
    </div>
  </div>


<%= form_with model: @location do |location| %>
  <div data-tabs-target="content" class="flex flex-col tab-content" aria-hidden="true">
    <div class="rounded-lg bg-white  flex-grow">
      <div class="py-5 flex-grow items-center">
        <%= render 'locations/show/location', location: location %>
      </div>
    </div>
  </div>

  <div data-tabs-target="content" class="flex flex-col tab-content" aria-hidden="true">
    <div class="rounded-lg bg-white  flex-grow">
      <div class="py-5 flex-grow items-center">
        <%= render 'locations/show/evses', location: location %>
      </div>
    </div>
  </div>

  <div data-tabs-target="content" class="flex flex-col tab-content" aria-hidden="true">
    <div class="rounded-lg bg-white  flex-grow">
      <div class="py-5 flex-grow items-center">
        <%= render 'shared/logs', api_request_logs: @api_request_logs %>
      </div>
    </div>
  </div>
</div>
<% end %>



