<div class="flow-root overflow-x-auto">
  <div class="-mx-4 -my-2 sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full divide-y divide-gray-300">
        <thead class='uppercase'>
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">No</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Version</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Identifier</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Role</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Url</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% endpoints.each.with_index(1) do |endpoint, index| %>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= index %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= endpoint.version_detail.version.version %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= endpoint.identifier%></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= endpoint.role %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= endpoint.url %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%#= render 'shared/pagination', data: { pagy: @pagy } %>
    </div>
  </div>
</div>