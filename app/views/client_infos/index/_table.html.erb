<div class="flow-root overflow-x-auto">
  <div class="-mx-4 -my-2 sm:-mx-6 lg:-mx-8 overflow-x-auto">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full divide-y divide-gray-300">
        <thead class='uppercase'>
          <tr>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">id</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Party id</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Country Code</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Role</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Last Updated</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% if @client_infos.present? %>
            <% @client_infos.each do |client_info| %>
              <tr>
                <td class="px-3 py-4 text-sm text-gray-500"><%= client_info.id %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= client_info.party_id %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= client_info.country_code %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= client_info.role %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= client_info.status %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= client_info.last_updated%></td>
              </tr>
            <% end %>
          <% else %>
            <tr class='text-center'><td colspan='7' class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">No Client Info Data</td></tr>
          <% end %>
        </tbody>
      </table>
      <%= render 'shared/pagination', data: { pagy: pagy } %>
    </div>
  </div>
</div>