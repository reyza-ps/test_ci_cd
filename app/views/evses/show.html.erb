<!-- Heading Section -->
<div class="md:flex md:items-center md:justify-between mb-5">
  <div class="min-w-0 flex-1">
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-xl sm:tracking-tight">Evse Detail</h2>
  </div>
  <div class="mt-4 flex md:mt-0 md:ml-4">
  </div>
</div>
<!-- End Heading Section -->

<div data-tabs-target="content" class="flex flex-col tab-content" aria-hidden="true">
  <div class="rounded-lg bg-white  flex-grow">
    <div class="py-5 flex-grow items-center">
      <%= form_with model: @evse do |evse| %>
        <div class="overflow-hidden bg-white shadow sm:rounded-lg">
          <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
            <div class="border-b border-gray-200 bg-indigo-500 px-4 py-2 mt-5 mb-5">
              <h3 class="text-md font-medium leading-6 text-white">Evse</h3>
            </div>
            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-12 mt-5 px-4">
              <div class="sm:col-span-6">
                <label for="uid" class="block text-sm font-medium leading-6 text-gray-900">Uid<span class='text-red-600'> *</span></label>
                <div class="mt-2">
                  <%= evse.text_field :uid, disabled: true, autocomplete: "uid", class: "disabled:cursor-not-allowed disabled:border-gray-200 disabled:bg-gray-50 disabled:text-gray-500 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>
              <div class="sm:col-span-6">
                <label for="evse_id" class="block text-sm font-medium leading-6 text-gray-500">Evse ID</label>
                <div class="mt-2">
                  <%= evse.text_field :evse_id, disabled: true, autocomplete: "evse_id", class: "disabled:cursor-not-allowed disabled:border-gray-200 disabled:bg-gray-50 disabled:text-gray-500 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>

              <div class="sm:col-span-6">
                <label for="status" class="block text-sm font-medium leading-6 text-gray-900">Status<span class='text-red-600'> *</span></label>
                <div class="mt-2">
                  <%= evse.text_field :status, disabled: true, autocomplete: "status", class: "disabled:cursor-not-allowed disabled:border-gray-200 disabled:bg-gray-50 disabled:text-gray-500 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>
              <div class="sm:col-span-6">
                <label for="floor_level" class="block text-sm font-medium leading-6 text-gray-500">Floor level</label>
                <div class="mt-2">
                  <%= evse.text_field :floor_level, disabled: true, autocomplete: "floor_level", class: "disabled:cursor-not-allowed disabled:border-gray-200 disabled:bg-gray-50 disabled:text-gray-500 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>

              <div class="sm:col-span-6">
                <label for="parking_restrictions" class="block text-sm font-medium leading-6 text-gray-900">Parking Restrictions<span class='text-red-600'> *</span></label>
                <div class="mt-2">
                  <div class='px-3 disabled:cursor-not-allowed disabled:border-gray-200 disabled:bg-gray-50 disabled:text-gray-500 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'> 
                    <% evse.object.parking_restrictions.each do |park| %>
                      <span class='inline-flex items-center bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-purple-800'><%= park.to_s.upcase %></span>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="sm:col-span-6">
                <label for="capabilities" class="block text-sm font-medium leading-6 text-gray-500">Capabilities</label>
                <div class="mt-2">
                  <div class='px-3 disabled:cursor-not-allowed disabled:border-gray-200 disabled:bg-gray-50 disabled:text-gray-500 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'> 
                    <% evse.object.capabilities.each do |cap| %>
                      <span class='inline-flex items-center bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-purple-800'><%= cap.to_s.upcase %></span>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="sm:col-span-6">
                <label for="last_updated" class="block text-sm font-medium leading-6 text-gray-900">Last Updated<span class='text-red-600'> *</span></label>
                <div class="mt-2">
                  <%= evse.text_field :last_updated, disabled: true, autocomplete: "last_updated", class: "disabled:cursor-not-allowed disabled:border-gray-200 disabled:bg-gray-50 disabled:text-gray-500 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                </div>
              </div>
              <%= render 'evses/show/connectors', evse: evse %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



