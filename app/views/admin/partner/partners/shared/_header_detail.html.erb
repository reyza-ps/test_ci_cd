<div class="overflow-hidden bg-white">
  <div class="px-4 py-3 sm:px-6">
    <span class="inline-block h-20 w-32 overflow-hidden bg-gray-100">
      <% if @partner.logo.url.present? %>
        <%= image_tag @partner.logo.url, alt: 'user', class: "h-full w-full text-gray-300"  %>
      <% else %>
        <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      <% end %>
    </span>
  </div> 

  <div class="border-t border-gray-200 px-4 py-2 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-4">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Code</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.code %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Registration No</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.registration_no %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.name %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Email</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.email %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Country</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.country %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">City</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.city %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">State</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.state %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Address</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.address %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Website Url</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.website_url %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Mobile Phone</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.mobile_phone %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Overviw</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.overview %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Created At</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.created_at %></dd>
      </div>
    </dl>
  </div>

  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
   <h5 class="text-md font-medium leading-6 text-gray-900">User Information</h5>
    <dl class="mt-5 grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-3">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">ID</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.user&.id %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Email</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.user&.email %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-black-500">Full Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @partner.user&.name %></dd>
      </div>
    </dl>
  </div>
</div>
