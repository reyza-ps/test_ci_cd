<%= form_for(@partner, url: admin_partner_path(@partner), class: "space-y-8 divide-y divide-gray-200", method: :put) do |f| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div class="pt-3">
      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <label for="code" class="block text-sm font-medium leading-6 text-gray-900">Code<span class='text-red-600'> *</span></label>
          <div class="mt-2">
            <%= f.text_field :code, autofocus: true, required: true, autocomplete: "code", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="registration_no" class="block text-sm font-medium leading-6 text-gray-900">Registration No<span class='text-red-600'> *</span></label>
          <div class="mt-2">
            <%= f.text_field :registration_no, autofocus: true, required: true, autocomplete: "registration_no", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name<span class='text-red-600'> *</span></label>
          <div class="mt-2">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email<span class='text-red-600'> *</span></label>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="address" class="block text-sm font-medium leading-6 text-gray-900">Full Address<span class='text-red-600'> *</span></label>
          <div class="mt-2">
            <%= f.text_area :address, rows: 2, autocomplete: "address", required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="city" class="block text-sm font-medium leading-6 text-gray-900">City<span class='text-red-600'> *</span></label>
          <div class="mt-2">
            <%= f.text_field :city, autofocus: true, required: true, autocomplete: "city", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="state" class="block text-sm font-medium leading-6 text-gray-900">State</label>
          <div class="mt-2">
            <%= f.text_field :state, autofocus: true, autocomplete: "state", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="country" class="block text-sm font-medium leading-6 text-gray-900">Country</label>
          <div class="mt-2">
            <% all_countries = Country.all.order(name: :asc).map(&:name).uniq || ["Malaysia", "Singapore", "Indoneisa", "United States"] %>
            <%= f.select :country, all_countries, {selected: 'Malaysia'}, autofocus: true, autocomplete: "country", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-s sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="postcode" class="block text-sm font-medium leading-6 text-gray-900">Postcode</label>
          <div class="mt-2">
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="overview" class="block text-sm font-medium leading-6 text-gray-900">Overview</label>
          <div class="mt-2">
            <%= f.text_area :overview, rows: 2, autocomplete: "overview", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div> 

        <div class="sm:col-span-3">
          <label for="website_url" class="block text-sm font-medium leading-6 text-gray-900">Website URL</label>
          <div class="mt-2">
            <%= f.text_field :website_url, autofocus: true, autocomplete: "website_url", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="mobile_phone" class="block text-sm font-medium leading-6 text-gray-900">Mobile Phone</label>
          <div class="mt-2">
            <%= f.text_field :mobile_phone, autofocus: true, autocomplete: "mobile_phone", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="party_id" class="block text-sm font-medium leading-6 text-gray-900">Party ID</label>
          <div class="mt-2">
            <%= f.text_field :party_id, autofocus: true, autocomplete: "party_id", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="country_code" class="block text-sm font-medium leading-6 text-gray-900">Country Code</label>
          <div class="mt-2">
            <%= f.text_field :country_code, autofocus: true, autocomplete: "country_code", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <div class="sm:col-span-3">
          <label for="ocpi_percentage_fee" class="block text-sm font-medium leading-6 text-gray-900">Ocpi Percentage Fee</label>
          <div class="mt-2">
            <%= f.number_field :ocpi_percentage_fee, autofocus: true, autocomplete: "ocpi_percentage_fee", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="country_code" class="block text-sm font-medium leading-6 text-gray-900">Logo</label>
          <div class="mt-2">
            <label class="block">
              <%= f.file_field :logo, class: "block w-full text-sm text-slate-500
                file:mr-4 file:py-2 file:px-4
                file:rounded-full file:border-0
                file:text-sm file:font-semibold
                file:bg-violet-50 file:text-violet-700
                hover:file:bg-violet-100
              " %>              
            </label>              
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-start">
      <%= link_to 'Cancel', admin_partners_path, class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= f.button 'Save', class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"%>
    </div>
  </div>
<% end %>